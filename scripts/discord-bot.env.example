DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_BOT_PREFIX=!

# Nodecast API base URL
NODECAST_API_BASE_URL=http://localhost:3000

# Shared secret to use server endpoint /api/auth/discord/bot-token
NODECAST_DISCORD_AUTH_SECRET=

# Server-side Discord OAuth settings (required once, on Nodecast server env)
# DISCORD_OAUTH_CLIENT_ID=
# DISCORD_OAUTH_CLIENT_SECRET=
# DISCORD_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback
# DISCORD_OAUTH_SCOPES=identify email
# DISCORD_BOT_AUTH_SECRET=use_the_same_value_as_NODECAST_DISCORD_AUTH_SECRET
# DISCORD_GUILD_ID=your_discord_server_id
# DISCORD_ADMIN_ROLE_ID=1356477545989799990

# Optional default JWT used for all Discord users not in DISCORD_USER_TOKEN_MAP
NODECAST_API_TOKEN=

# Optional JSON map: {"discordUserId":"nodecastJwtToken"}
DISCORD_USER_TOKEN_MAP={}

# Auto-fetch Nodecast JWT (used when NODECAST_API_TOKEN is empty)
# Bot will sign in via Firebase email/password, then call /api/auth/firebase.
NODECAST_EMAIL=
NODECAST_PASSWORD=
# Uses project key for Firebase Identity Toolkit (optional if already set globally)
FIREBASE_API_KEY=

# How recent the last watch activity must be to count as "currently watching" (default 300000 = 5 minutes)
NODECAST_ACTIVE_WINDOW_MS=300000

# Deduplicate repeated message events (default 15000 ms)
DISCORD_COMMAND_DEDUPE_WINDOW_MS=15000
